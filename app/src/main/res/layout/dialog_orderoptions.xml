<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/botsheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="45dp"
        android:animateLayoutChanges="true">

        <!-- Booking Title -->

        <!-- Booking Message -->


        <!-- Confirm Button -->

        <!-- Cancel Button -->


        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectServicesButton"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            android:layout_width="335dp"
            android:layout_height="130dp"
            android:layout_margin="12dp"
            android:backgroundTint="@color/lighterblue"
            android:drawableRight="@drawable/baseline_settings_24"
            android:text="Pick a Service"
            android:textSize="20sp"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toTopOf="@+id/confirmBookingButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintVertical_bias="0.513" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shopinfo"
            app:layout_constraintVertical_bias="0.042">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/selectTimeButton"
                android:layout_width="160dp"
                android:layout_height="65dp"
                android:layout_margin="6dp"
                android:backgroundTint="@color/lightblue"
                android:drawableRight="@drawable/baseline_access_time_filled_24"
                android:text="Select Time"
                app:cornerRadius="15dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/selectPaymentMethodButton"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="160dp"
                android:layout_height="65dp"
                android:layout_margin="6dp"
                android:text="Select
                Payment Method"
                app:cornerRadius="15dp" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirmBookingButton"
            android:layout_width="335dp"
            android:layout_height="65dp"
            android:text="Confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shopinfo"
            app:layout_constraintVertical_bias="0.55" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelBookingButton"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirmBookingButton"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/shopinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.151"
            tools:layout_editor_absoluteX="16dp">

            <TextView
                android:id="@+id/bookingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="Shop Name"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookingMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center"
                android:text="shop address"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/contactNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="+(63)912-345-6789"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="200dp"
        android:layout_height="6dp"
        android:layout_marginBottom="35dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="24dp"
        app:layout_anchor="@+id/constraintLayout2"
        app:layout_anchorGravity="top|center">

    </com.google.android.material.card.MaterialCardView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
