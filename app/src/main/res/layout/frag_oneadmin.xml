<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragOneAdmin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            style="@style/custom_cv_style2"
            android:layout_width="370dp"
            android:layout_height="650dp"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.167">

           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <ImageView
                   android:layout_width="150dp"
                   android:layout_height="150dp"
                   android:layout_marginStart="110dp"
                   android:layout_marginTop="12dp"
                   android:layout_marginEnd="110dp"
                   android:layout_marginBottom="9dp"
                   android:src="@drawable/vcw_pfp"
                   app:layout_constraintBottom_toTopOf="@+id/shoptv"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.0"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintVertical_bias="1.0" />

               <TextView
                   android:id="@+id/shoptv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:layout_marginBottom="10dp"
                   android:fontFamily="sans-serif-medium"
                   android:text="shop name"
                   android:textAlignment="center"
                   android:textColor="@color/darkblue"
                   android:textSize="24sp"
                   android:textStyle="bold"
                   app:layout_constraintBottom_toTopOf="@+id/shopBtn"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintVertical_bias="0.975"
                   tools:layout_editor_absoluteX="0dp" />

               <com.google.android.material.button.MaterialButton
                   android:id="@+id/shopBtn"
                   android:layout_width="200dp"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="88dp"
                   android:layout_marginTop="220dp"
                   android:layout_marginEnd="88dp"
                   android:layout_marginBottom="363dp"
                   android:backgroundTint="@color/green"
                   android:fontFamily="sans-serif-condensed"
                   android:text="OPEN"
                   android:textSize="24sp"
                   android:textStyle="bold"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintVertical_bias="0.0" />

               <com.google.android.material.button.MaterialButton
                   android:id="@+id/updateBtn"
                   android:layout_width="match_parent"
                   android:layout_height="56dp"
                   android:layout_marginTop="332dp"
                   android:enabled="false"
                   android:paddingTop="12dp"
                   android:paddingBottom="12dp"
                   android:text="UPDATE"
                   android:textSize="20sp"
                   app:cornerRadius="16dp"
                   app:layout_constraintTop_toBottomOf="@+id/shopBtn"
                   tools:layout_editor_absoluteX="0dp" />

               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/materialCardView4"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="24dp"
                   android:layout_marginTop="24dp"
                   android:layout_marginRight="24dp"
                   android:backgroundTint="@color/lighterblue"
                   app:layout_constraintBottom_toTopOf="@+id/materialCardView3"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.0"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/shopBtn">

                   <com.google.android.material.materialswitch.MaterialSwitch
                       android:id="@+id/switch1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="24dp"
                       android:text="Check- up"
                       android:textSize="16sp"
                       tools:layout_editor_absoluteX="142dp"
                       tools:layout_editor_absoluteY="334dp" />

               </com.google.android.material.card.MaterialCardView>

               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/materialCardView3"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="24dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginRight="24dp"
                   android:backgroundTint="@color/lighterblue"
                   app:layout_constraintBottom_toTopOf="@+id/materialCardView5"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.0"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/materialCardView4">

                   <com.google.android.material.materialswitch.MaterialSwitch
                       android:id="@+id/switch2"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="24dp"
                       android:text="Maintenance"
                       android:textSize="16sp"
                       tools:layout_editor_absoluteX="142dp"
                       tools:layout_editor_absoluteY="334dp" />

               </com.google.android.material.card.MaterialCardView>

               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/materialCardView5"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="24dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginRight="24dp"
                   android:backgroundTint="@color/lighterblue"
                   app:layout_constraintBottom_toTopOf="@+id/materialCardView6"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/materialCardView3">

                   <com.google.android.material.materialswitch.MaterialSwitch
                       android:id="@+id/switch3"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="24dp"
                       android:text="Repair"
                       android:textSize="16sp"
                       tools:layout_editor_absoluteX="142dp"
                       tools:layout_editor_absoluteY="334dp" />

               </com.google.android.material.card.MaterialCardView>

               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/materialCardView6"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="24dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginRight="24dp"
                   android:layout_marginBottom="24dp"
                   android:backgroundTint="@color/lighterblue"
                   app:layout_constraintBottom_toTopOf="@+id/updateBtn"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/materialCardView5">

                   <com.google.android.material.materialswitch.MaterialSwitch
                       android:id="@+id/switch4"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="24dp"
                       android:text="Car Wash"
                       android:textSize="16sp"
                       tools:layout_editor_absoluteX="142dp"
                       tools:layout_editor_absoluteY="334dp" />

               </com.google.android.material.card.MaterialCardView>

           </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>





    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
        android:id="@+id/pgbarOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="#80000000">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:cardCornerRadius="12dp">

            <VideoView
                android:id="@+id/loadingVideoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

    </FrameLayout>


</FrameLayout>